{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build c program",
        "type": "shell",
        "command": "gcc",
        "args": [
          "${file}",
          "-g",
          "-o",
          "${fileBasenameNoExtension}.exe"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }
  